				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{    \r\n    \"type\": \"ContextSourceRegistration\",\r\n    \"id\": \"urn:aeros:federation:Domain01:Persistence\",\r\n    \"information\": [\r\n        {\r\n            \"entities\": [\r\n                {\r\n                    \"type\": \"InfrastructureElement\"\r\n                },\r\n                {\r\n                    \"type\": \"Domain\"\r\n                },\r\n                {\r\n                    \"type\": \"ServiceComponent\"\r\n                }\r\n            ]\r\n        }\r\n    ],\r\n    \"contextSourceInfo\": [\r\n        {\r\n            \"key\": \"Authorization\",\r\n            \"value\": \"urn:ngsi-ld:request\"\r\n        }\r\n    ],\r\n    \"mode\": \"inclusive\",\r\n    \"operations\": [\r\n        \"retrieveOps\"\r\n    ],\r\n    \"hostAlias\": \"Domain01\",\r\n    \"endpoint\": \"http://192.168.1.202:1026\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
